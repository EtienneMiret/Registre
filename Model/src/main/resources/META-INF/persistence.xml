<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0">
  <persistence-unit name="Registre">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

    <!-- Classes à persister. -->
    <class>fr.elimerl.registre.entités.Acteur</class>
    <class>fr.elimerl.registre.entités.Auteur</class>
    <class>fr.elimerl.registre.entités.BandeDessinée</class>
    <class>fr.elimerl.registre.entités.Compositeur</class>
    <class>fr.elimerl.registre.entités.Dessinateur</class>
    <class>fr.elimerl.registre.entités.Emplacement</class>
    <class>fr.elimerl.registre.entités.Fiche</class>
    <class>fr.elimerl.registre.entités.Film</class>
    <class>fr.elimerl.registre.entités.Livre</class>
    <class>fr.elimerl.registre.entités.Mot</class>
    <class>fr.elimerl.registre.entités.Nommé</class>
    <class>fr.elimerl.registre.entités.Propriétaire</class>
    <class>fr.elimerl.registre.entités.Réalisateur</class>
    <class>fr.elimerl.registre.entités.Référence</class>
    <class>fr.elimerl.registre.entités.Scénariste</class>
    <class>fr.elimerl.registre.entités.Série</class>
    <class>fr.elimerl.registre.entités.Session</class>
    <class>fr.elimerl.registre.entités.Utilisateur</class>
    <exclude-unlisted-classes/>

    <properties>
      <property name="eclipselink.weaving" value="false"/>
      <property name="eclipselink.id-validation" value="NULL"/>
      <property name="eclipselink.logging.logger" value="fr.elimerl.registre.journalisation.Slf4jSessionLogger"/>
      <property name="eclipselink.logging.level" value="FINEST"/>
      <property name="eclipselink.logging.sql" value="FINEST"/>
      <property name="eclipselink.logging.level.sql" value="FINEST"/>
      <property name="eclipselink.logging.parameters" value="true"/>
      <property name="eclipselink.logging.timestamp" value="false"/>
      <property name="eclipselink.logging.thread" value="false"/>
      <property name="eclipselink.logging.session" value="false"/>
    </properties>

  </persistence-unit>
</persistence>
