<html xmlns="http://www.w3.org/1999/xhtml" lang="fr" xml:lang="fr">
#set( $pageTitle = $record.title )
#parse( 'header.vm' )
<body>
#parse( 'pageTop.vm' )
<h1>$record.title</h1>
<dl>
#if( $record.series )
  <dt>Série</dt>
  <dd>$record.series</dd>
#end
#if( !$record.acteurs.empty )
  <dt>Acteurs</dt>
  <dd>
#foreach( $actor in $record.actors )
    $actor.name#if( $foreach.last ).#elseif( $foreach.index == ($record.acteurs.size() - 2) ) et#else,#end
#end
  </dd>
#end
#if( $record.director )
  <dt>Réalisateur</dt>
  <dd>$record.director</dd>
#end
#if( $record.composer )
  <dt>Compositeur</dt>
  <dd>$record.composer</dd>
#end
  <dt>Support</dt>
  <dd>$record.support</dd>
#if( $record.comment )
  <dt>Commentaire</dt>
  <dd>$record.comment</dd>
#end
#if ( $record.owner )
  <dt>Propriétaire</dt>
  <dd>$record.owner</dd>
#end
#if ( $record.location )
  <dt>Emplacement</dt>
  <dd>$record.location</dd>
#end
  <dt>Référencement</dt>
  <dd>Le $record.creation par ${fiche.creator}.</dd>
#if ( $record.lastModification != $record.creation )
  <dt>Mise à jour</dt>
  <dd>Le $record.lastModification par ${fiche.lastModifier}.</dd>
#end
</dl>
</body>
</html>
